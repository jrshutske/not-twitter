<% provide(:title, 'Sign up') %>
<h1 class="text-light">Sign up</h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-offset-3  col-md-12 col-sm-12 col-xs-12 text-light form-group">
    <%= form_for(@user, url: signup_path) do |field| %>
      <%= render 'shared/error_messages' %>
      <%= field.text_field :name, class: "col-md-12 form-control", placeholder: "Name" %>
      <%= field.email_field :email, class: "col-md-12 form-control mt-3", placeholder: "Email" %>
      <%= field.password_field :password, class: "col-md-12 form-control mt-3", placeholder: "Password"%>
      <%= field.password_field :password_confirmation, class: "col-md-12 form-control mt-3", placeholder: "Confirm Password"%>
      <%= field.submit "Create my account", class: "col-md-12 btn btn-primary mt-3 mb-3" %>
    <% end %>
  </div>
</div>