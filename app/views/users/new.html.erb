<% provide(:title, 'Sign up') %>
<h1 class="text-light">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 text-light form-group">
    <%= form_for(@user) do |field| %>
      <%= field.label :name, class: "col-md-12" %> 
      <%= field.text_field :name, class: "col-md-12 form-control" %>

      <%= field.label :email, class: "col-md-12" %>
      <%= field.email_field :email, class: "col-md-12 form-control" %>

      <%= field.label :password, class: "col-md-12" %>
      <%= field.password_field :password, class: "col-md-12 form-control"%>

      <%= field.label :password_confirmation, "Confirmation", class: "col-md-12" %>
      <%= field.password_field :password_confirmation, class: "col-md-12 form-control "%>
      </div>
      <%= field.submit "Create my account", class: "col-md-2 col-md-offset-5 btn btn-primary" %>
    <% end %>
  
</div>